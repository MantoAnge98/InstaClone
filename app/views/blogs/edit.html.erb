  <% if logged_in? %>
    <% if @blog.user.id == current_user.id %>
        <%=render 'form' %>
    <% else %>
    <div style="margin-top:20px">
      <p>Your Profile : <%= link_to "Profile User", user_path(current_user.id), class: "btn btn-secondary col-4" %></p>
      <p>Or Post List: <%= link_to "Post List", blogs_path, class: "btn btn-secondary col-4"%></p>
    </div>
  <% end %>
 <% else %>
  <div style="margin-top:20px">
    <p>Log in : <%= link_to "Log in", new_session_path , class: "btn btn-primary col-4"%></p>
    <p>Or Sign Up : <%= link_to "Sign Up", new_user_path, class: "btn btn-primary col-4"%></p>
  </div>
 <% end %>