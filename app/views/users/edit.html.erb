<h2>Edit Profile</h2>

<%= form_with(model:@user, local: true) do |f| %> 
<% if @user.errors.any? %> 
  <div id="error_explanation"  class="alert alert-danger" role="alert">> 
    <h4><%= pluralize(@user.errors.count, "erreurs") %> empêche(nt) <%= @user.name %> d'être sauvegardée(s):</h4> 
    <ul> 
      <% @user.errors.full_messages.each do |message| %> 
        <li><%= message %></li> 
      <% end %> 
    </ul> 
  </div> 
<% end %> 

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %> 
</div>

<div class="field">
  <%= f.label :email %> 
  <%= f.email_field :email %> 
</div>

<div class="field">
  <%= f.label :image %>
  <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
  <%= f.file_field :image, class: "form-control" %>
  <%= f.hidden_field :image_cache%> 
</div>

<div class="field">
  <%= f.label :password %> 
  <%= f.password_field :password,  class: "form-control"  %>
</div>

<div class="field">
  <%= f.label :password_confirmation %> 
  <%= f.password_field :password_confirmation, autocomplete: "email",  class: "form-control"  %> 
</div>

<div class="actions">
  <%= f.submit "Update", class: "btn btn-success" %> 
</div>
<% end %> 
<%= link_to "Blog Lists", blogs_path, class: "btn btn-primary" %>